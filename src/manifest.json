{
  "manifest_version": 2,

  "name": "Whatsapp Web Emoticons Shortcuts",
  "description": "Replaces your typed emoticons with the actual ones!",
  "version": "1.0",
  "icons": {
    "128": "icon.png"
  },
  
  "permissions": [
	"http://web.whatsapp.com/*",
    "https://web.whatsapp.com/*"
  ],
  
  "content_scripts" : [
    {
      "matches" : [
	    "http://web.whatsapp.com/*",
        "https://web.whatsapp.com/*"
	  ],
      "js" : [
	    "jquery-2.1.3.min.js",
  	    "script.js"
	  ]	
    }
  ]
}
